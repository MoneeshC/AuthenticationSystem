@model List<AuthWithMongo.Models.User>

@{
    ViewData["Title"] = "All Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">User Directory</h2>

    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-primary" asp-controller="Account" asp-action="AddUser">
        <i class="bi bi-person-plus-fill"></i> Add New Users
    </a>
</div>