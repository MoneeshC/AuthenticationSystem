@model List<AuthWithMongo.Models.User>

@{
    ViewData["Title"] = "All Users";
}

<div class="container mt-4">
    <h2 class="mb-4">User Directory</h2>

    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                </tr>
            }
        </tbody>
    </table>
</div>